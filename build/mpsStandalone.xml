<project name="mpsStandalone" default="build" basedir="../">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/mpsStandalone" />
  <property name="build.layout" location="${build.dir}/artifacts/mpsStandalone" />
  <property name="mps_home" location="${basedir}" />
  <property name="artifacts.mpsBootstrapCore" location="${build.dir}/artifacts/mpsBootstrapCore" />
  <property name="artifacts.mpsCore" location="${build.dir}/artifacts/mpsCore" />
  <property name="artifacts.mpsWorkbench" location="${build.dir}/artifacts/mpsWorkbench" />
  <property name="artifacts.IDEA" location="${mps_home}" />
  <property file="${artifacts.mpsBootstrapCore}/build.properties" prefix="import.mpsBootstrapCore" />
  <property name="mpsBootstrapCore.version" value="${import.mpsBootstrapCore.mpsBootstrapCore.version}" />
  
  <target name="assemble" depends="classes, declare-mps-tasks, fetchDependencies">
    <mkdir dir="${build.layout}/bin" />
    <copy todir="${build.layout}/bin">
      <fileset file="${basedir}/bin/idea.properties" />
    </copy>
    <copy todir="${build.layout}/bin">
      <fileset file="${basedir}/bin/log.xml" />
    </copy>
    <copy todir="${build.layout}/bin">
      <fileset file="${basedir}/bin/log4j.dtd" />
    </copy>
    <mkdir dir="${build.layout}/languages" />
    <copy todir="${build.layout}/languages">
      <fileset dir="${artifacts.mpsWorkbench}/languages" />
    </copy>
    <copy todir="${build.layout}/languages">
      <fileset dir="${artifacts.mpsBootstrapCore}/languages" />
    </copy>
    <mkdir dir="${build.layout}/lib" />
    <copy todir="${build.layout}/lib">
      <fileset dir="${artifacts.IDEA}/lib">
        <exclude name="src/" />
        <exclude name="ant/docs.zip" />
        <exclude name="ant/src/*" />
      </fileset>
    </copy>
    <copy todir="${build.layout}/lib">
      <fileset dir="${artifacts.mpsBootstrapCore}/lib" />
    </copy>
    <copy todir="${build.layout}/lib">
      <fileset dir="${artifacts.mpsWorkbench}/lib" />
    </copy>
    <mkdir dir="${build.layout}/license" />
    <copy todir="${build.layout}/license">
      <fileset dir="${basedir}/license" />
    </copy>
    <mkdir dir="${build.layout}/plugins" />
    <mkdir dir="${build.layout}/plugins/mps-core" />
    <copy todir="${build.layout}/plugins/mps-core">
      <fileset dir="${artifacts.mpsCore}/mps-core" />
    </copy>
    <mkdir dir="${build.layout}/plugins/cvsIntegration" />
    <copy todir="${build.layout}/plugins/cvsIntegration">
      <fileset dir="${basedir}/plugins/cvsIntegration" />
    </copy>
    <mkdir dir="${build.layout}/plugins/svn4idea" />
    <copy todir="${build.layout}/plugins/svn4idea">
      <fileset dir="${basedir}/plugins/svn4idea">
        <exclude name="**/*.zip" />
      </fileset>
    </copy>
    <mkdir dir="${build.layout}/plugins/git4idea" />
    <copy todir="${build.layout}/plugins/git4idea">
      <fileset dir="${basedir}/plugins/git4idea">
        <exclude name="**/*.zip" />
      </fileset>
    </copy>
    <mkdir dir="${build.layout}/plugins/terminal" />
    <copy todir="${build.layout}/plugins/terminal">
      <fileset dir="${basedir}/plugins/terminal" />
    </copy>
    <echo file="${build.layout}/build.properties">mpsBootstrapCore.version=${mpsBootstrapCore.version}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="build/mpsBootstrapCore.xml" inheritAll="false" useNativeBasedir="true" />
    <ant antfile="build/mpsCore.xml" inheritAll="false" useNativeBasedir="true" />
    <ant antfile="build/mpsTesting.xml" inheritAll="false" useNativeBasedir="true" />
    <ant antfile="build/mpsWorkbench.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
  
  <target name="generate" depends="declare-mps-tasks" />
  
  <target name="declare-mps-tasks" />
  
  <target name="makeDependents" />
</project>